generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  nome      String
  email     String      @unique
  senha     String
  dashboard Dashboard[]

  @@map("users")
}

model Dashboard {
  id       String    @id @default(uuid())
  nome     String
  user     User      @relation(fields: [userid], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userid   String
  graficos Grafico[]

  @@map("dashboards")
}

model Grafico {
  id          String       @id @default(uuid())
  tipo        String
  nome        String
  ordem       String
  dashboard   Dashboard    @relation(fields: [dashboardId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  dashboardId  String
  referencias Referencia[]

  @@map("graficos")
}

model Referencia {
  id        String  @id @default(uuid())
  nome      String
  valor     Int
  cor       String
  Grafico   Grafico @relation(fields: [graficoId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  graficoId String

  @@map("referencias")
}
